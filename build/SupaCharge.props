<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <RootDir>$(MSBuildStartupDirectory)</RootDir>
    <SrcDir>$(Rootdir)\src</SrcDir>
  </PropertyGroup>
  
  <PropertyGroup>
    <ProjectGuid>{DBBD21C6-898C-4F93-8FA9-B7D99FD383C0}</ProjectGuid>
    <OutputType>Library</OutputType>
    <FileAlignment>512</FileAlignment>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(FrameworkVersion)' == 'v3.5'">
    <TargetFrameworkVersionName>net-3.5</TargetFrameworkVersionName>
    <TargetFrameworkVersion>v3.5</TargetFrameworkVersion>
    <DefineConstants>DEBUG;TRACE;NET35</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(FrameworkVersion)' == 'v4.0'">
    <TargetFrameworkVersionName>net-4.0</TargetFrameworkVersionName>
    <TargetFrameworkVersion>v4.0</TargetFrameworkVersion>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <DebugDir>$(Rootdir)\debug\$(TargetFrameworkVersionName)</DebugDir>
    <PackagesDir>$(Rootdir)\packages\$(TargetFrameworkVersionName)</PackagesDir>
    <OutputPath>$(DebugDir)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Binaries Include="obj"></Binaries>
  </ItemGroup>

  <Target Name="EchoInfo">
    <Message Text="FrameworkVersion: $(FrameworkVersion)"/>
    <Message Text="TargetFrameworkVersion: $(TargetFrameworkVersion)"/>
    <Message Text="TargetFrameworkVersionName: $(TargetFrameworkVersionName)"/>
    <Message Text="RootDir: $(RootDir)"/>
    <Message Text="DebugDir: $(DebugDir)"/>
    <Message Text="SrcDir: $(SrcDir)"/>
    <Message Text="PackagesDir: $(PackagesDir)"/>
  </Target>

  <Target Name="ValidateFrameworkVersion">
    <Error Condition="'$(FrameworkVersion)' == ''" Text="FrameworkVersion must be defined" />
  </Target>

  <Target Name="CleanTemp">
    <RemoveDir Directories="@(Binaries)"/>
  </Target>
</Project>